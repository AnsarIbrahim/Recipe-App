<div class="max-w-md mx-auto mt-8 bg-white p-4 rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold text-blue-500 mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "text-lg font-medium" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "text-lg font-medium" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-lg font-medium" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Log in", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
