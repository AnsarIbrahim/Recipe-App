<div class="p-4 border bg-white rounded mt-3">
  <h1 class="text-2xl font-semibold mb-4 flex items-center justify-center">Shopping List</h1>
  <div class="flex justify-between items-center mb-4 space-x-10">
    <div>
      <p class="text-lg">Amount of food to buy: <%= @shopping_list.size %></p>
      <p class="text-lg mt-4">Total value of food needed: $<%= @total_value %></p>
    </div>
    <div class="text-lg flex flex-col">
      <%= link_to content_tag(:span, "Recipe:", class: "text-black") + " " + @recipe.name, recipe_path(params[:recipe_id]), class: "text-blue-500 hover:underline" %> 
      <%= link_to content_tag(:span, "Inventory:", class: "text-black") + " " + @inventory.name, inventory_path(params[:inventory_id]), class: "text-blue-500 hover:underline mt-4" %>
    </div>
  </div>

<div class="flex flex-col mt-4 border bg-slate-200 rounded">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full text-left text-sm font-light">
          <thead class="border-b font-medium dark:border-neutral-500">
            <tr>
              <th scope="col" class="px-6 py-3 text-left">Food</th>
              <th scope="col" class="px-6 py-3 text-left">Quantity</th>
              <th scope="col" class="px-6 py-3 text-left">Price</th>
            </tr>
          </thead>
          <tbody>
            <% @shopping_list.each do |food| %>
            <tr class="border-b transition duration-300 ease-in-out hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
              <td class="whitespace-nowrap px-6 py-3"><%= food[0] %></td>
              <td class="whitespace-nowrap px-6 py-3">$<%= food[1] %></td>
              <td class="whitespace-nowrap px-6 py-3">$<%= food[2] %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
