<div class="bg-slate-400 p-6 flex justify-center items-center flex-col">
  <h1 class="text-5xl font-semibold mb-5 text-slate-900 ">Public Recipes</h1>

  <div class="bg-slate-100 p-4 rounded-lg">
    <% if @public_recipes.empty? %>
      <p class="text-xl text-gray-600">No public recipes available.</p>
      <% else %>
        <% @public_recipes.each do |recipe| %>
          <%= link_to recipe_path(recipe), class: "block hover:shadow-md transition duration-300 rounded-lg p-4 mb-4" do
            %>
            <div class="flex items-center justify-between space-x-20">
              <div>
                <p class="text-3xl font-medium text-gray-600 mb-2">
                  <%= recipe.name %>
                </p>
                <p class="text-xl text-slate-300">By: <span class="text-slate-600">
                    <%= recipe.user.name %>
                  </span></p>
              </div>
              <div>
                <p class="text-gray-600">Food Items Count: <%= recipe.recipe_foods.count %>
                </p>
                <p class="text-gray-600">Total Price: $<%= recipe.recipe_foods.sum { |rf| rf.quantity * rf.food.price }
                    %>
                </p>
              </div>
            </div>
            <% end %>
              <% end %>
                <% end %>
  </div>
</div>